{
  "name": "@jayree/sfdx-plugin-legacy",
  "description": "jayree sfdx legacy commands",
  "version": "1.0.0",
  "author": "jayree",
  "bugs": "https://github.com/jayree/sfdx-plugin-legacy/issues",
  "dependencies": {
    "@oclif/core": "^1.9.0",
    "@salesforce/command": "^5.1.3",
    "@salesforce/core": "^3.19.1",
    "adm-zip": "^0.5.9",
    "debug": "^4.3.4",
    "fast-xml-parser": "^4.0.8",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "marked": "^4.0.16",
    "marked-terminal": "^5.1.1",
    "puppeteer": "^14.1.1",
    "semver": "^7.3.7",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@oclif/plugin-command-snapshot": "^3",
    "@oclif/plugin-help": "^5.1.12",
    "@salesforce/dev-config": "^3.0.1",
    "@salesforce/dev-scripts": "2.0.2",
    "@salesforce/prettier-config": "^0.0.2",
    "@salesforce/ts-sinon": "^1.3.21",
    "@types/adm-zip": "^0.5.0",
    "@types/chai": "^4.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/marked": "^4.0.3",
    "@types/marked-terminal": "^3.1.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.36",
    "@types/semver": "^7.3.9",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "codecov": "^3.8.3",
    "deepmerge": "^4.2.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-salesforce": "^0.1.6",
    "eslint-config-salesforce-typescript": "^0.2.8",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "mocha": "^10.0.0",
    "nock": "^13.2.4",
    "nyc": "^15.1.0",
    "oclif": "^3.0.1",
    "patch-package": "^6.4.7",
    "pinst": "^3.0.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "shx": "^0.3.4",
    "sinon": "^14.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=14.17.1"
  },
  "files": [
    "/lib/src",
    "/lib/config",
    "/messages",
    "/oclif.manifest.json",
    "/CHANGELOG.md"
  ],
  "homepage": "https://github.com/jayree/sfdx-jayree-plugin",
  "keywords": [
    "ALM",
    "country",
    "state",
    "picklist",
    "git",
    "diff",
    "deployment",
    "full",
    "partial",
    "automation",
    "change set",
    "manifest",
    "package xml",
    "package description",
    "configure",
    "streaming",
    "open",
    "retrieve",
    "fix",
    "hook",
    "flow test coverage",
    "lightning sync status",
    "sfdx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/src/commands",
    "bin": "sfdx",
    "hooks": {
      "update": "./lib/src/hooks/changelog"
    },
    "topics": {
      "jayree": {
        "name": "jayree",
        "description": "manifest, source, and org automation toolset",
        "subtopics": {
          "packagedescription": {
            "description": "add/modify/remove the description of a package"
          },
          "automation": {
            "description": "headless browser automation tools"
          },
          "automation:changeset": {
            "description": "deploy/list incomming change sets (beta)"
          },
          "automation:ltngsync": {
            "description": "check the Lightning Sync User Sync Status and reset sync if needed (beta)"
          }
        }
      }
    },
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot"
    ],
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/sfdx-jayree/dist-tags",
        "releaseNotesPath": "https://github.com/jayree/sfdx-jayree-plugin/tree/main",
        "releaseNotesFilename": "CHANGELOG.md"
      }
    }
  },
  "repository": "jayree/sfdx-jayree-plugin",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "sf-compile",
    "format": "sf-format",
    "lint": "sf-lint",
    "lint-fix": "sf-lint --fix",
    "postcompile": "oclif readme",
    "postinstall": "patch-package",
    "postpack": "shx rm -f oclif.manifest.json",
    "postpublish": "pinst --enable",
    "posttest": "yarn lint && yarn test:deprecation-policy",
    "prepack": "sf-prepack",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "test:deprecation-policy": "./bin/run snapshot:compare",
    "version": "oclif readme"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
