{
  "name": "@jayree/sfdx-plugin-legacy",
  "description": "A Salesforce CLI plugin containing all jayree legacy commands.",
  "version": "1.1.46",
  "author": "jayree",
  "bugs": "https://github.com/jayree/sfdx-plugin-legacy/issues",
  "type": "module",
  "dependencies": {
    "@jayree/changelog": "^1.1.3",
    "@salesforce/command": "^5.3.9",
    "@salesforce/source-deploy-retrieve": "^9.3.0",
    "adm-zip": "^0.5.10",
    "debug": "^4.3.4",
    "fast-xml-parser": "^4.2.5",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.7",
    "puppeteer": "^20.7.3",
    "tslib": "^2.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@oclif/plugin-command-snapshot": "^4.0.5",
    "@oclif/plugin-help": "^5.2.10",
    "@salesforce/dev-config": "^4.0.1",
    "@salesforce/dev-scripts": "3.1.0",
    "@salesforce/prettier-config": "^0.0.3",
    "@salesforce/ts-sinon": "^1.4.8",
    "@types/adm-zip": "^0.5.0",
    "@types/chai": "^4.3.5",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.1",
    "chai": "^4.3.7",
    "codecov": "^3.8.3",
    "deepmerge": "^4.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-salesforce": "^2.0.1",
    "eslint-config-salesforce-typescript": "^1.1.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.2.6",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sf-plugin": "^1.15.3",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mocha": "^10.2.0",
    "nock": "^13.3.1",
    "nyc": "^15.1.0",
    "oclif": "^3.9.1",
    "patch-package": "^7.0.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "shx": "^0.3.4",
    "sinon": "^15.2.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json",
    "/CHANGELOG.md"
  ],
  "homepage": "https://github.com/jayree/sfdx-plugin-legacy",
  "keywords": [
    "deployment",
    "automation",
    "change set",
    "package description",
    "lightning sync status",
    "sfdx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "hooks": {
      "update": "./lib/hooks/changelog"
    },
    "topics": {
      "jayree": {
        "name": "jayree",
        "description": "manifest, source, and org automation toolset",
        "subtopics": {
          "packagedescription": {
            "description": "add/modify/remove the description of a package"
          },
          "automation": {
            "description": "headless browser automation tools"
          },
          "automation:changeset": {
            "description": "deploy/list incomming change sets (beta)"
          },
          "automation:ltngsync": {
            "description": "check the Lightning Sync User Sync Status and reset sync if needed (beta)"
          }
        }
      }
    },
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot"
    ],
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/@jayree/sfdx-plugin-legacy/dist-tags",
        "releaseNotesPath": "https://github.com/jayree/sfdx-plugin-legacy/tree/main",
        "releaseNotesFilename": "CHANGELOG.md"
      }
    }
  },
  "repository": "jayree/sfdx-plugin-legacy",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "sf-compile",
    "format": "sf-format",
    "lint": "sf-lint",
    "lint-fix": "sf-lint --fix",
    "postcompile": "oclif readme",
    "postinstall": "patch-package",
    "postpack": "shx rm -f oclif.manifest.json",
    "postpublish": "pinst --enable",
    "posttest": "yarn lint && yarn test:deprecation-policy",
    "prepack": "sf-prepack",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "test:deprecation-policy": "./bin/dev.js snapshot:compare",
    "version": "oclif readme"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
